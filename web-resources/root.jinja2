    padding: 5px;
    text-align: center;
    margin: 0;
    line-height: 14px;
    font-style: italic;
    max-width: 90%;
    margin-left: 2%;
  }

  .button.small {
    width: auto;
    padding: 4px 5px 1px 5px;
    margin: 0;
    margin-left: 5px;
  }

  .button.small i {
    font-size: 16px;
  }

  .configure_window {
